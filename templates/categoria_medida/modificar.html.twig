{% extends 'layout.html.twig' %}
{% block content %}
    {% if categoriaMedida.id %}
        <h1>Modificar categoría de medida: {{ categoriaMedida.id }}</h1>
    {% else %}
        <h1>Crear nueva categoría de medida</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row">
        {% if categoriaMedida.id %}
                <div class="col-sm-2">
                    <a href="{{ path('categoria_medida_eliminar', {'id': categoriaMedida.id}) }}">
                        <button type="button" class="btn btn-danger">Eliminar</button>
                    </a>
                </div>
        {% else %}
        {% endif %}
        <div class="col-sm-10">
            <a href="{{ path('categoria_medida_listar') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver</a>
            <button type="submit" id="modificar_categoria_medida_enviar" name="guardar" class="btn-primary btn">
                <i class="fa fa-check"></i> Guardar
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}