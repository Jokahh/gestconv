{% extends 'layout.html.twig' %}
{% block title %}Listado de Categorías de Medida{% endblock %}
{% block content %}
    <div class="row px-3 py-1">
        <div class="col-12 col-lg-7 justify-content-start p-0">
            <h4>Listado de todas las categorías de medida</h4>
        </div>
        <div class="col-12 col-lg-5 d-flex justify-content-start justify-content-lg-end align-items-center p-0">
            <a href="{{ path('categoria_medida_nuevo') }}" class="btn btn-success">
                <i class="fa fa-plus"></i> Nueva categoría de medida</a>
        </div>
    </div>

    <div class="row px-3 py-1">
        <table class="table table-sm table-bordered table-hover table-striped text-center">
            <thead class="thead-light">
            <tr>
                <th class="align-middle">Descripción</th>
                <th class="align-middle"></th>
            </tr>
            </thead>
            <tbody>
            {% for categoriaMedida in pagination %}
                <tr>
                    <td class="align-middle">{{ categoriaMedida.descripcion }}</td>
                    <td class="align-middle">
                        <a href="{{ path('categoria_medida_modificar', {'id': categoriaMedida.id}) }}">
                            <button type="button" class="btn btn-info">Editar</button>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="align-middle">No hay categorías de medidas</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}