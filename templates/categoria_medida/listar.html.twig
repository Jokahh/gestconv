{% extends 'layout.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col">
            <h2>Listado de todas las categorías de medidas</h2>
        </div>
        <div>
            <a href="{{ path('categoria_medida_nuevo') }}" class="btn btn-success">
                <i class="fa fa-plus"></i> Nueva categoría de medida</a>
        </div>
    </div>

    <div class="row">
        <table class="table table-sm table-bordered table-hover table-striped text-center">
            <thead class="thead-light">
            <tr>
                <th>Descripción</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for categoriaMedida in categoriasMedidas %}
                <tr>
                    <td>{{ categoriaMedida.descripcion }}</td>
                    <td>
                        <a href="{{ path('categoria_medida_modificar', {'id': categoriaMedida.id}) }}">
                            <button type="button" class="btn btn-info">Editar</button>
                        </a>
                    </td>

                </tr>
            {% else %}
                <tr>
                    <td>No hay categorías de medidas</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}