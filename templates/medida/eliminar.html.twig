{% extends 'layout.html.twig' %}
{% block title %}Eliminar Medida{% endblock %}
{% block content %}
    <h1>Eliminar la medida</h1>

    <div class="alert alert-danger">
        La medida "{{ medida.id }}" será eliminada de la base de datos.
        La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('medida_listar') }}" class="btn btn-info">Volver al listado</a>
        <button type="submit" name="confirmar" class="btn btn-danger">Confirmar borrado</button>
    </form>
{% endblock %}