{% extends 'layout.html.twig' %}
{% block title %}Listado de Medidas{% endblock %}
{% block content %}
    <div class="row p-1">
        <div class="col-12 col-lg-7 justify-content-start p-0">
            <h4>Listado de todas las medidas</h4>
        </div>
        <div class="col-12 col-lg-5 d-flex justify-content-start justify-content-lg-end align-items-center p-0">
            <a href="{{ path('medida_nuevo') }}" class="btn btn-success">
                <i class="fa fa-plus"></i> Nueva medida</a>
        </div>
    </div>

    <div class="row p-1">
        <table class="table table-sm table-bordered table-hover table-striped text-center">
            <thead class="thead-light">
            <tr>
                <th class="align-middle">Nombre</th>
                <th class="align-middle">Categor√≠a</th>
                <th class="align-middle">Dias</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for medida in pagination %}
                <tr>
                    <td class="align-middle">{{ medida.nombre }}</td>
                    <td class="align-middle">{{ medida.categoria }}</td>
                    <td class="align-middle">{{ medida.dias }}</td>
                    <td class="align-middle">
                        <a href="{{ path('medida_modificar', {'id': medida.id}) }}">
                            <button type="button" class="btn btn-info">Editar</button>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="align-middle">No hay medidas</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
