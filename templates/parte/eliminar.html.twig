{% extends 'layout.html.twig' %}
{% block title %}Eliminar Parte{% endblock %}
{% block content %}
    <h1>Eliminar el parte</h1>

    <div class="alert alert-danger">
        El parte "{{ parte.id }}" será eliminado de la base de datos.
        La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('parte_listar') }}" class="btn btn-info">Volver al listado</a>
        <button type="submit" name="confirmar" class="btn btn-danger">Confirmar borrado</button>
    </form>
{% endblock %}