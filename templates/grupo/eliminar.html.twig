{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Eliminar el grupo</h1>

    <div class="alert alert-danger">
        El grupo "{{ grupo.id }}" será eliminado de la base de datos.
        La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('grupo_listar') }}" class="btn btn-info">Volver al listado</a>
        <button type="submit" name="confirmar" class="btn btn-danger">Confirmar borrado</button>
    </form>
{% endblock %}