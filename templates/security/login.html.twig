{% extends 'layout.html.twig' %}
{% block title %}Acceder{% endblock %}
{% block content %}
    <form method="post" class="form">
        {% if error %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endif %}
        <div id="login">
            <h3 class="text-center text-success pt-5 pb-5">Acceder a Gestconv+</h3>
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="" method="post">
                                <h4 class="text-center text-info">Introduzca los datos de acceso</h4>
                                <div class="form-group">
                                    <label for="usuario" class="text-info">Usuario:</label><br>
                                    <input class="form-control" type="text" value="{{ ultimo_usuario }}" name="_username" required autofocus id="usuario">
                                </div>
                                <div class="form-group">
                                    <label for="contrasenia" class="text-info">Contrase√±a:</label><br>
                                    <input type="password" name="_password" required id="contrasenia" class="form-control">
                                </div>
                                <div class="col-12 d-flex justify-content-center">
                                    <button class="btn btn-lg btn-success" type="submit">Acceder</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
