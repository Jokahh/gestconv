{% extends 'layout.html.twig' %}

{% block title %}¡Entrar!{% endblock %}
{% block content %}
    <form method="post" class="form">
        {% if error %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endif %}
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="usuario">Correo: </label>
            <div class="col-sm-10">
                <input type="text" value="{{ ultimo_usuario }}" name="_username"
                       required autofocus id="usuario">
            </div>
            <label class="col-form-label col-sm-2" for="contrasenia">Contraseña: </label>
            <div class="col-sm-10">
                <input type="password" name="_password" required id="contrasenia">
            </div>
            <div class="col-sm-10">
                <button class="btn btn-lg btn-primary" type="submit">Acceder</button>
            </div>
        </div>
    </form>
{% endblock %}
