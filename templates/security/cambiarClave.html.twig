{% extends 'layout.html.twig' %}
{% block title %}Cambiar Contraseña de Usuario{% endblock %}
{% block content %}
    <h1>Cambiar contraseña de: {{ docente.username }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row">
        <div class="col-sm-10">
            <a href="{{ path('inicio') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver</a>
            <button type="submit" id="modificar_misdatos_enviar" name="guardar" class="btn-primary btn">
                <i class="fa fa-check"></i> Guardar
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}