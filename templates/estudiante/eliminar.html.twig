{% extends 'layout.html.twig' %}
{% block title %}Eliminar Estudiante{% endblock %}
{% block content %}
    <h1>Eliminar el estudiante</h1>

    <div class="alert alert-danger">
        El estudiante "{{ estudiante.id }}" será eliminado de la base de datos.
        La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('estudiante_listar') }}" class="btn btn-info">Volver al listado</a>
        <button type="submit" name="confirmar" class="btn btn-danger">Confirmar borrado</button>
    </form>
{% endblock %}