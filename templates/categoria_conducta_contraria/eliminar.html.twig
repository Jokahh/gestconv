{% extends 'layout.html.twig' %}
{% block title %}Eliminar Categoría de Conducta Contraria{% endblock %}
{% block content %}
    <div class="d-flex justify-content-center align-items-center border rounded bg-danger mb-2 p-1">
        <div>
            <h3 class="text-white text-center">
                Eliminar la categoría de conducta contraria #{{ categoriaConductaContraria.id }}
            </h3>
        </div>
    </div>

    <div class="alert alert-danger">
        La categoría de conducta contraria "{{ categoriaConductaContraria.id }}" será eliminada de la base de datos.
        La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('categoria_conducta_contraria_listar') }}" class="btn btn-info"><i
                    class="fa fa-arrow-left"></i> Volver al listado</a>
        <button type="submit" name="confirmar" class="btn btn-danger"><i class="fa fa-trash"></i> Confirmar borrado
        </button>
    </form>
{% endblock %}