{% extends 'layout.html.twig' %}
{% block title %}Listado de Conductas Contrarias{% endblock %}
{% block content %}
    <div class="row px-3 py-1">
        <div class="col-12 col-lg-7 justify-content-start p-0">
            <h4>Listado de todas las conductas contrarias</h4>
        </div>
        <div class="col-12 col-lg-5 d-flex justify-content-start justify-content-lg-end align-items-center p-0">
            <a href="{{ path('conducta_contraria_nuevo') }}" class="btn btn-success">
                <i class="fa fa-plus"></i> Nueva conducta contraria</a>
        </div>
    </div>

    <div class="row px-3 py-1">
        <table class="table table-sm table-bordered table-hover table-striped text-center">
            <thead class="thead-light">
            <tr>
                <th class="align-middle">Categor√≠a</th>
                <th class="align-middle">Parte</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for conductaContraria in pagination %}
                <tr>
                    <td class="align-middle">{{ conductaContraria.categoria }}</td>
                    <td class="align-middle">{{ conductaContraria.parte }}</td>
                    <td class="align-middle">
                        <a href="{{ path('conducta_contraria_modificar', {'id': conductaContraria.id}) }}">
                            <button type="button" class="btn btn-info">Editar</button>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No hay conductas contrarias</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}

