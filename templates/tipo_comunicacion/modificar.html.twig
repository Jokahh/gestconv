{% extends 'layout.html.twig' %}
{% block title %}Modificar Tipo de Comunicación{% endblock %}
{% block content %}
    {% if tipoComunicacion.id %}
        <h1>Modificar tipo de comunicación: {{ tipoComunicacion.id }}</h1>
    {% else %}
        <h1>Crear nuevo tipo de comunicación</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row">
        {% if tipoComunicacion.id %}
            <div class="col-sm-2">
                <a href="{{ path('tipo_comunicacion_eliminar', {'id': tipoComunicacion.id}) }}">
                    <button type="button" class="btn btn-danger">Eliminar</button>
                </a>
            </div>
        {% else %}
        {% endif %}
        <div class="col-sm-10">
            <a href="{{ path('tipo_comunicacion_listar') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i>
                Volver</a>
            <button type="submit" id="modificar_tipoComunicacion_enviar" name="guardar" class="btn-primary btn">
                <i class="fa fa-check"></i> Guardar
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}