{% extends 'layout.html.twig' %}
{% block title %}Modificar Tramo{% endblock %}
{% block content %}
    <div class="row">
        <div class="col d-flex justify-content-center align-items-center border rounded bg-light mb-2 mx-3 p-2">
            {% if tramo.id %}
                <h3>Modificar tramo #{{ tramo.id }}</h3>
            {% else %}
                <h3>Crear nuevo tramo</h3>
            {% endif %}
        </div>
    </div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row">
        {% if tramo.id %}
            <div class="col-sm-2">
                <a href="{{ path('tramo_eliminar', {'id': tramo.id}) }}">
                    <button type="button" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</button>
                </a>
            </div>
        {% else %}
        {% endif %}
        <div class="col-sm-10">
            <a href="{{ path('tramo_listar') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver</a>
            <button type="submit" id="modificar_tramo_enviar" name="guardar" class="btn-primary btn">
                <i class="fa fa-check"></i> Guardar
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}