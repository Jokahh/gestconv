{% extends 'layout.html.twig' %}
{% block title %}Listado de Actitudes De Familia{% endblock %}
{% block content %}
    <div class="row">
        <div class="col">
            {% if cursoActual %}
                <h2>Listado de las actitudes del curso {{ curso }}</h2>
            {% else %}
                <h2>Listado de todas las actitudes</h2>
            {% endif %}
        </div>
        <div>
            {% if cursoActual %}
                <a href="{{ path('actitud_familia_listar') }}" class="btn btn-secondary">
                    <i class="fa fa-list"></i> Todas las actitudes</a>
            {% else %}
                <a href="{{ path('actitud_familia_listar_curso_actual') }}" class="btn btn-secondary">
                    <i class="fa fa-list"></i> Actitudes del curso {{ curso }}</a>
            {% endif %}
            <a href="{{ path('actitud_familia_nuevo') }}" class="btn btn-success">
                <i class="fa fa-plus"></i> Nueva actitud de familia</a>
        </div>
    </div>

    <div class="row">
        <table class="table table-sm table-bordered table-hover table-striped text-center">
            <thead class="thead-light">
            <tr>
                <th>Descripción</th>
                <th>Fecha</th>
                <th>Curso Académico</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for actitud_familia in actitudes_familia %}
                <tr>
                    <td>{{ actitud_familia.descripcion }}</td>
                    <td>{{ actitud_familia.fecha|date("Y-m-d") }}</td>
                    <td>{{ actitud_familia.cursoAcademico.descripcion }}</td>
                    <td>
                        <a href="{{ path('actitud_familia_modificar', {'id': actitud_familia.id}) }}">
                            <button type="button" class="btn btn-info">Editar</button>
                        </a>
                    </td>

                </tr>
            {% else %}
                <tr>
                    <td>No hay actitudes de familia</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

